<h2>Update the drone</h2>


<form method="POST" action="/drones/{{updateDron._id}}/edit">
<div class="input-group input-group-sm mb-3">
    <label class="input-group-text" id="inputGroup-sizing-sm" for="name">Name</label>
    <input name="name" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" value="{{updateDron.name}}">
</div>
<div class="input-group input-group-sm mb-3">
    <label class="input-group-text" id="inputGroup-sizing-sm" for="propellers">propellers</label>
    <input name="propellers" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" value="{{updateDron.propellers}}">
</div>
<div class="input-group input-group-sm mb-3">
    <label class="input-group-text" id="inputGroup-sizing-sm" for="maxSpeed">Speed</label>
    <input name="maxSpeed" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" value="{{updateDron.maxSpeed}}">
</div>



    <button id="button-edit">Change</button>





</form>